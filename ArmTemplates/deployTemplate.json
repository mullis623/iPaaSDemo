{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "environment": {
            "type": "string",
            "allowedValues": [
                "dev",
                "test",
                "prod"
            ],
            "metadata": {
                "description": "Name of the environment for Azure resource naming purposes"
            }
        },
        "resourcePrefix": {
            "type": "string",
            "minLength": 2,
            "metadata": {
                "description": "Unique prefix to prepend to Azure resource names"
            }
        },
        "adminEmail": {
            "type": "string",
            "metadata": {
                "description": "The email address of the owner of the service"
            }
        },
        "adminName": {
            "type": "string",
            "metadata": {
                "description": "The name of the owner of the service"
            }
        },
        "imageArchiveContainer": {
            "type": "string",
            "defaultValue": "imagearchive"
        },
        "imageMetadataContainer": {
            "type": "string",
            "defaultValue": "imagemetadata"
        },
        "processedImageContainer": {
            "type": "string",
            "defaultValue": "processedimages"
        },
        "imageContainer": {
            "type": "string",
            "defaultValue": "images"
        }
    },
    "variables": {
        "resourceName": "[concat(parameters('resourcePrefix'), '-ipaas-', parameters('environment'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "ApiManagement",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://pythondjangodemo.blob.core.windows.net/azuretemplates/api-management.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "apiManagementName": {
                        "value": "[variables('resourceName')]"
                    },
                    "adminName": {
                        "value": "[parameters('adminName')]"
                    },
                    "adminEmail": {
                        "value": "[parameters('adminEmail')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "AppServices",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'Storage')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://pythondjangodemo.blob.core.windows.net/azuretemplates/app-services.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[variables('resourceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[variables('resourceName')]"
                    },
                    "imageArchiveContainer": {
                        "value": "[parameters('imageArchiveContainer')]"
                    },
                    "imageMetadataContainer": {
                        "value": "[parameters('imageMetadataContainer')]"
                    },
                    "processedImageContainer": {
                        "value": "[parameters('processedImageContainer')]"
                    },
                    "imageContainer": {
                        "value": "[parameters('imageContainer')]"
                    },
                    "serviceBusConnectionString": {
                        "value": "[reference('ServiceBus').outputs.connectionString.value]"
                    },
                    "storageAccountConnectionString": {
                        "value": "[reference('Storage').outputs.connectionString.value]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "CognitiveServices",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://pythondjangodemo.blob.core.windows.net/azuretemplates/cognitive-services.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cognitiveServicesPredictionName": {
                        "value": "[variables('resourceName')]"
                    },
                    "cognitiveServicesVisionName": {
                        "value": "[variables('resourceName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "CosmosDb",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://pythondjangodemo.blob.core.windows.net/azuretemplates/cosmosdb.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cosmosDbAccountName": {
                        "value": "[variables('resourceName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "LogicApps",
            "dependsOn": [
                "[resourceId('Microsoft.Resources/deployments', 'CosmosDb')]",
                "[resourceId('Microsoft.Resources/deployments', 'ServiceBus')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://pythondjangodemo.blob.core.windows.net/azuretemplates/logic-apps.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "logicAppName": {
                        "value": "[variables('resourceName')]"
                    },
                    "cosmosDbAccountName": {
                        "value": "[variables('resourceName')]"
                    },
                    "cosmosDbPrimaryMasterKey": {
                        "value": "[reference('CosmosDb').outputs.primaryMasterKey.value]"
                    },
                    "serviceBusConnectionString": {
                        "value": "[reference('ServiceBus').outputs.connectionString.value]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "ServiceBus",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://pythondjangodemo.blob.core.windows.net/azuretemplates/service-bus.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "serviceBusNamespace": {
                        "value": "[variables('resourceName')]"
                    }
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-10-01",
            "name": "Storage",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://pythondjangodemo.blob.core.windows.net/azuretemplates/storage.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[replace(variables('resourceName'), '-', '')]"
                    },
                    "imageArchiveContainer": {
                        "value": "[parameters('imageArchiveContainer')]"
                    },
                    "imageMetadataContainer": {
                        "value": "[parameters('imageMetadataContainer')]"
                    },
                    "processedImageContainer": {
                        "value": "[parameters('processedImageContainer')]"
                    },
                    "imageContainer": {
                        "value": "[parameters('imageContainer')]"
                    }
                }
            }
        }
    ]
}